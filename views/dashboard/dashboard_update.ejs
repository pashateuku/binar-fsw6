                            <input type="text" name="email" class="form-control" placeholder="Email" value="<%= user_game.email %>" required>
                        </div>
                        <div class="form-group-dash">
                            <input type="password" name="password" class="form-control" placeholder="Password" value="<%= user_game.password %>" required>
                        </div>
                        <div class="parent-submit-dash">
                            <button type="submit" class="submit-img">
                                <img class="hand-img" src="/img/arrow-right.png" alt="">
                            </button>
                        </div>                
                    </form>
                 </div>
    </section>

