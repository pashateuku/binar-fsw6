<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>

    <!-- CSS Bootstrap 5.1.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <!-- Manual Styling -->
    <link rel="stylesheet" href="/css/dashboard.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">

</head>
<body>
    <section class="hero-image d-flex align-items-center">    
                 <div class="col-3 nav-manual">
                     <div class="nav-box">
                        <h4>ADMIN DASHBOARD</h4>
                        <div class="nav-button"><a href="/dashboard/">üè† Home</a></div>
                        <div class="nav-button"><a href="/dashboard/users">üë§ User Data</a></div>

                     </div>
                 </div>
                 <div class="col content-style">
                    <h2>User Data</h2>
                    <div class="content-desc">
                        <a>press <b>Edit</b> to edit data, <b>Delete</b> to delete data, and <b>Show All Data</b> to show all biodata of the user</a>
                    </div>
                    <table class="table-style">
                        <tr>
                            <th>No.</th>
                            <th>ID</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                        <% let i = 1 %> 
                        <% user_game.forEach(data => { %>
                        <tr>
                            <td><%= i%></td>
                            <td><%= data.id %></td>
                            <td><%= data.email %></td>
                            <td><%= data.password %></td>
                            <td>
                                <div class="button-small">
                                    <a href="/dashboard/users/update/<%= data.id %>">Edit</a>
                                </div>
                            </td>
                            <td>
                                <div class="button-small button-delete" href="/dashboard/users/delete/<%= data.id %>">
                                    <a href="/dashboard/users/delete/<%= data.id %>">Delete</a>
                                </div>
                            </td>
                            <td>
                                <div class="button-small button-show" href="/dashboard/users/<%= data.id %>">
                                    <a href="/dashboard/users/<%= data.id %>">Show All Data</a>
                                </div>
                            </td>
                        </tr>
                        <% i ++ %> 
                        <% }) %>
                    </table>
                 </div>
    </section>

    <!-- JS Bootstrap 5.1.3 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>